.well
  = 'Email Distribution'

= form_for @abstract_model.to_param, url: email_distribution_path(model_name: @abstract_model.to_param),
           html: {method: 'post', multipart: true, class: 'form-horizontal denser'} do
  %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}

  - if @errors
    .alert.alert-dismissible.alert-danger
      %button.close{'data-dismiss' => 'alert', type: 'button' } Ã—
      = @errors

  %fieldset
    .form-group.control-group.string_type
      %label.col-sm-2.control-label
        Name Of Email Template (Template From Mandrill)
      .col-sm-10.controls
        = text_field_tag :template_name, '', size: 50, required: true, class: 'form-control'
        %span.help-block
          Required.

  .form-group.form-actions
    .col-sm-offset-2.col-sm-10
      %button.btn.btn-success{type: 'submit', :'data-disable-with' => t('admin.form.confirmation')}
        %i.icon-white.icon-ok
        Send To Everyone
